<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Si la petición es un archivo real (JS, CSS, imágenes…), servirlo directamente
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]

  # Si la petición es un directorio real, servirlo directamente
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Todo lo demás → index.html  (SPA fallback)
  RewriteRule ^ /index.html [L]
</IfModule>
